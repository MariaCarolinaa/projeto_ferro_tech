<%- include('partials/head') %>
<%- include('partials/navbar') %>

<% let erros = '' %>

<% dados.forEach(dado => { %>
<div class="card" >
    <div class="card-body mr-4 ml-4 mt-4" style="height: 100%; margin-bottom: 11.7%;">
        <div>
            <h1 class="mb-4 text-center">Editar Material</h1>
            <span><%- erros %></span>
        </div>
        <form action="/materiais/editar" method="POST">
            <div class="col-sm-12 form-group">
                <input type="hidden" name="id_material" id="codigo" class="form-control" value=<%- dado.id_material %> >
            </div>
            <div class="row">
                <div class="col-sm-2 form-group">
                    <label for="codigo">Código</label>
                    <input type="text" min="0" name="codigo_material" id="codigo" class="form-control" value=<%- dado.codigo_material %> >
                </div>
                <div class="col-sm form-group">
                    <label for="nome_material">Nome</label>
                    <input type="text" name="nome_material" id="nome_material" class="form-control" value=<%- dado.nome_material %>>
                </div>
                <div class="col-sm form-group">
                    <label for="peso">Peso</label>
                    <input type="text" name="peso" id="peso" class="form-control" value=<%- dado.peso %>>
                </div>
                <div class="col-sm form-group">
                    <label for="estoque">Estoque</label>
                    <input type="text" name="estoque" id="estoque" class="form-control" value=<%- dado.estoque %>>
                </div>
                
            </div>
            <div class="row">
                <div class="col-sm form-group">
                    <label for="tipo">Tipo</label>
                    <input type="text" name="tipo" id="tipo" class="form-control" value=<%- dado.tipo %>>
                </div>
                <div class="col-sm-3 form-group">
                    <label for="unidadeReferencia">Unidade de Referência</label>
                    <select name="unidade_referencia" id="unidadeReferencia" class="form-control" value=<%- dado.unidade_referencia %>>
                        <option value="kg">KG</option>
                        <option value="gr">GR</option>
                        <option value="unidade">Unidade</option>
                    </select>
                </div>
                <div class="col-sm form-group">
                    <label for="preco">Preço</label>
                    <input type="text" name="preco" id="preco" class="form-control" value=<%- dado.preco %>>   
                </div>
            </div>
            <div style="text-align: center; margin-top: 40px;">
                <button class="btn btn-success"
                type="button"
                data-toggle="modal"
                data-target="#enviarEditar"
                 id="btnEnviarEditar"
                 >CONFIRMAR</button>
            </div>


<div
    class="modal fade"
    id="enviarEditar"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
            Você deseja realmente editar ?
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body text-center">
        
          <button
            type="submit"
            class="btn btn-outline-primary-login btn-outline-primary"
            style="margin-right: 33px;"
          >
            SIM
          </button>

          <button
            type="button"
            class="btn btn-outline-primary-login btn-outline-primary ml-6"
            data-dismiss="modal"
            aria-label="close"

          >
            NÃO
          </button>
      </div>
    </div>
  </div>
</div>
        </form>
    </div>
</div>


<% }) %>
<%- include('partials/footer') %>