<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">
    <img
      src="https://raw.githubusercontent.com/MariaCarolinaa/projeto_ferro_tech/main/public/imgs/logo-vetorizado.png"
      height="60px"
      width="130px"
    />
  </a>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNavDropdown"
    aria-controls="navbarNavDropdown"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav fonteMenu">
      <%if(login != null){%>

      <li class="nav-item dropdown">
        <a
          class="nav-link dropdown-toggle"
          href="/cadastro"
          id="navbarDropdownMenuLink"
          role="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Compras
        </a>
        <div
          class="dropdown-menu bg-dark"
          aria-labelledby="navbarDropdownMenuLink"
        >
          <a class="dropdown-item bg-dark text-white" href="/compra/cadastro"
            >Cadastrar</a

          >
          <a class="dropdown-item bg-dark text-white" href="/compras"
            >Listar</a
            
          >
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/materiais">Estoque de Materiais</a>
      </li>
      <%}else{%> <%}%>
    </ul>
  </div>
  <%if(login === null){%>
  <i
    class="fonteBotao"
    type="submit"
    data-toggle="modal"
    data-target="#loginCadastro"
  >
    Cadastrar/Login
  </i>
  <%}else{%>
  <span class="navbar-text pr-3 h5">Bem vindo, <%=login%></span>
  <i class="fonteBotao" type="submit" data-toggle="modal" data-target="#logout"
    >Logout
  </i>
  <%}%>
</nav>

<div
  class="modal fade"
  id="loginCadastro"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Login/Cadastro Ferro-Tech
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="exampleInputEmail1">Login</label>
            <input
              type="text"
              class="form-control"
              id="login"
              name="login"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Senha</label>
            <input
              type="password"
              class="form-control"
              id="senha"
              name="senha"
              maxlength="6"
            />
          </div>
          <a class="btn btn-outline-dark" href="cadastroUsuario" role="button"
            >Cadastrar-se</a
          >
          <button
            type="submit"
            class="btn btn-outline-primary-login btn-outline-primary"
            style="float: right"
          >
            Login
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="logout"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Deseja fazer Logout ?
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body text-center">
        <form action="/logout" method="POST">
          <button
            type="submit"
            class="btn btn-outline-primary-login btn-outline-primary"
            style="margin-right: 33px;"
          >
            SIM
          </button>

          <button
            type="button"
            class="btn btn-outline-primary-login btn-outline-primary ml-6"
            data-dismiss="modal"
            aria-label="close"

          >
            N√ÉO
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

